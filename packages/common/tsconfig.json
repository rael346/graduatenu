{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
